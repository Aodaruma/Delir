{
    "rules": {
        "indent": [ true, "spaces", 4 ],
        "ordered-imports": [ true ],
        "semicolon": [ true, "never" ],
        "trailing-comma": [ true ],
        "member-access": [ true ],
        "no-string-literal": [ true ],
        "quotemark": [ true, "single", "avoid-escape", "avoid-template" ]
    }
}
