@require '../../assets/styles/_variables'

.clip
    position absolute
    display inline-flex
    align-items flex-start
    width 300px
    height 20px
    padding 4px
    border-radius 2px
    filter saturate(90%)
    user-select none !important

    transition-property background-color, box-shadow
    transition-duration $animate-bgcolor-duration
    transition-timing-function $animate-function

    &.hasError::before
        content ''
        position absolute
        left 0
        top 0
        border 3px solid
        border-color $color-error transparent transparent $color-error

    &.hasError::after
        content ''
        position absolute
        left 0
        top 0
        border 4px solid
        border-color #fff transparent transparent #fff

    &.video
        background-color #6034bd

    &.audio
        background-color #905313

    &.text
        background-color #214c8c

    &.image
        background-color #7a1d55

    &.adjustment
        background-color #2f7a42

    &.p5js
        background-color #c1158e

    &.active
        z-index 1

        &.video
            background-color #7e50e1

        &.audio
            background-color #da8124

        &.text
            background-color #2f69bf

        &.image
            background-color #d03760

        &.adjustment
            background-color #1aa53d

        &.p5js
            background-color #e212a5

.nameLabel
    color #fff

.idLabel
    margin-left 3px
    color rgba(#000, .5)

.resizeHandle
    position absolute
    top 0
    right 0

    width 8px
    height 21px
    cursor ew-resize
