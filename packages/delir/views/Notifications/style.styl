@require 'nib'
@import '../../assets/styles/_variables'

.root
    position fixed
    top 64px
    right 16px
    z-index $z-index-notifications

.entry
    position relative
    width 400px
    max-width 50vw
    margin-bottom 8px
    border-radius 2px
    overflow hidden
    user-select text

    .close
        position absolute
        right 0
        width 24px
        height 24px
        padding 4px 8px
        line-height 1
        user-select none

    .entryTitle
        padding 4px 8px
        padding-right 24px
        font-size 14px
        line-height 1.2

    .entryBody
        margin 8px

    .detail
        margin 8px
        padding 4px
        overflow auto

        background rgba(255, 255, 255, 0.5)
        border-radius 2px
        color rgba(#000, .8)

    &.--info
        background-color lighten($color-info, 50%)

        .entryTitle
            background-color $color-info

        .entryBody
            color darken($color-info, 40%)

    &.--error
        background-color lighten($color-error, 50%)

        .entryTitle
            background-color $color-error

        .entryBody
            color darken($color-error, 40%)
