@require '../../assets/styles/_variables'

.ScriptParamEditor
    position absolute
    top 0
    z-index $z-index-expression-editor

    display flex
    flex-flow column
    width 100%
    height 100%

.title
    display inline-block
    margin-right 8px
    width 14em
    text-overflow ellipsis
    white-space nowrap

.toolbar
    padding 4px 8px
    background-color var(--background)

.editor
    flex 1
