@require '../../assets/styles/_variables'
@require '../../assets/styles/_mixins'

.keyframeView
    display flex
    flex-flow row

.paramList
    thin-scrollbar()

    display block
    flex none
    width 220px
    height 100%
    padding 4px 0
    overflow auto

.paramItem
    display flex
    justify-content space-between
    height 24px
    padding 0 4px
    line-height 24px

    &.paramItemActive
        background-color rgba(#fff, .2)

    &.paramItemError
        background-color $color-error-lighten

    &.paramItemEffectContainer
        display block
        margin 4px 0 0
        padding 0
        height: auto

    &.paramItemPluginMissing
        color rgba($color-error, .5)

    &.paramItemHeader
        position: sticky
        top: 0
        z-index: 1
        display block
        margin-bottom 2px
        overflow hidden
        background-color #292929
        text-overflow ellipsis
        white-space nowrap

        :global(.fa)
            width 1em
            margin-left 4px
            margin-right 8px

.paramItemName
    flex 1

.paramItemInput
    width 5em

    :global(._drag-number-input), select
        display block
        width 100%

.referenceNameInput
    width 6em
    margin-right 8px

.processorName
    color var(--text-subbed)
    font-size 10px

.paramKeyframeIndicator
    flex 0
    display inline-block
    width 16px
    height 16px
    margin-right 8px

    font-size 14px
    line-height 2

    opacity .3

    &.paramKeyframeIndicator--hasKeyframe
        opacity 1

    &.paramKeyframeIndicator--nonAnimatable::before
        content ''
        display inline-block
        width calc(1em + 2px)
        height 1em

.keyframeContainer
    position relative
    display flex
    flex 1
    height 100%

.measureContainer
    position absolute
    top 0
    width 100%
    height 100%
    overflow hidden
    pointer-events none

    .measureLayer
        width 100%
        height 100%

    .measureLine
        position absolute
        height 100%
        padding-top 2px
        padding-left 2px
        font-size 8px
        border-left 1px dashed #aaa
        opacity .2

        &.--grid
            border-left-style solid
            opacity .5
