.formHorizontal
    // margin-top 8px

    :global
        .formGroups
            display table

        .formGroup
            // display table-row
            margin-bottom 4px

            + .formGroup
                padding-top .5rem

            :global
                .label
                    display table-cell
                    padding-right 8px

                .input, .inputs
                    display table-cell

        .formControl
            position relative
            display inline-block

            input, select
                display inline-block
                padding 4px

                background-color transparent
                color inherit
                font-family inherit
                outline none

                border none
                border-bottom 1px solid #aaa
                border-radius 0

                transition border-bottom-color .1s

                &:active, &:focus
                    border-bottom-color var(--color-theming)

            &[readonly]
                border-bottom 1px solid transparent
                user-select none
                cursor default


            &.invalid
                input
                    border-bottom 1px solid #d00000

                &.alert
                    &::after
                        content ''

                        position absolute
                        left 2px
                        bottom calc(-100% + 1.3rem + 2px)

                        border 4px solid transparent
                        border-bottom-color #fff

                    &::before
                        content attr(data-message)

                        display inline-block
                        width auto
                        padding 2px

                        position absolute
                        left 0
                        bottom calc(-100% + 2px)

                        white-space nowrap

                        color #000
                        background-color #fff
                        border-radius 2px

                & + .unit
                    display inline-block
                    margin-left .5rem

        .button
            padding 4px 16px
            font-size 12px
            background-color #eeeeee
            border none
            outline none
            cursor default

            &.primary
                color #fff
                background-color #0081eb

            & + &
                margin-left 8px
