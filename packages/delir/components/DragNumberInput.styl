.DragNumberInput
    box-sizing border-box

    display inline-block
    width 100%
    padding 0 4px
    min-width 1em
    min-height 1em

    border none
    border-bottom 1px dotted #ff7a00

    font-family inherit
    background-color transparent
    text-align right
    outline none

    color #ff7a00
    transition border-bottom-color .1s
    cursor ew-resize

    &[readonly]
        color var(--text-subbed)
        cursor default

        border-bottom 1px solid transparent
        user-select none
        cursor default

:global(.platform-win)
    .DragNumberInput
        cursor text
