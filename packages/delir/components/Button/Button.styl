@import '../../assets/styles/_variables'

.Button
    padding 4px 16px
    font-size 12px
    line-height 16px
    background-color #eee
    border-radius 3px
    border none
    outline none
    cursor default

    transition background-color $animate-bgcolor-duration $animate-function

    & + &
        margin-left 8px

    &:hover
        background-color darken(#eee, 10%)


.Button--primary
    color #fff
    background-color #0081eb

    &:hover
        background-color darken(#0081eb, 10%)
