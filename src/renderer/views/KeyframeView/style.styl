.keyframeView
    display flex
    flex-flow row

.propList
    display block
    width 220px
    height 100%
    flex none

.propItem
    display flex
    justify-content space-between
    height 24px
    padding 0 4px
    line-height 24px

.propItemName
    flex 1

.propKeyframeIndicator
    flex 0
    display inline-block
    width 16px
    height 16px
    margin-right 8px

    font-size 14px
    line-height 2

    opacity .3

    &.propKeyframeIndicator--hasKeyframe
        opacity 1

.keyframeContainer
    display flex
    flex 1
    height 100%

