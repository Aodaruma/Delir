.Gradations
    position relative
    width 100%
    height 30px
    border-bottom 1px solid #444

    .playingCursor
        position absolute
        top 5px
        z-index 10

        border-left 1px solid #fff
        opacity .4

        &::before
            content ''
            position relative
            left -5px
            top -5px

            display block

            border 5px solid transparent
            border-top-color #fff