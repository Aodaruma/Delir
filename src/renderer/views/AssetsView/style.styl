@import '../../styles/_variables'

.assetsView
    display flex
    flex-direction column
    align-items flex-start
    width 300px
    flex none

.assetList
.compositionList
    width 100%
    flex 1

    // tbody, thead, tr, td, th
    //     display block

    th
        border-bottom 1px solid rgba(#fff, .3)

    td
        border-bottom 1px solid rgba(#fff, .2)

    th, td
        padding 4px
        font-size 12px


    :global
        ._label-input
            width 100%

        .table-body
            overflow auto

        .table-row, .table-col
            border-right none
            border-bottom none

.assetList
    margin-top 16px
    border-top 1px solid rgba(#fff, .8)
