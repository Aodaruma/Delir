@import '../../styles/_variables'

.assetsView
    display flex
    flex-direction column
    align-items flex-start
    width 300px
    flex none

.assetList
.compositionList
    width 100%
    flex 1

    // tbody, thead, tr, td, th
    //     display block

    th
        border-bottom 1px solid rgba(#fff, .3)

    td
        border-bottom 1px solid rgba(#fff, .2)

    th, td
        padding 4px
        font-size 12px


    :global
        ._label-input
            width 100%

        .table-body
            overflow auto

        .table-row, .table-col
            border-right none
            border-bottom none

.compositionList
    margin-top 16px
    border-top 1px solid rgba(#fff, .8)

.newCompModalRoot
    width 500px
    padding 16px
    padding-bottom 0

    background-color var(--background)

    :global(.label)
        width 10rem

    .modalFooter
        display flex
        align-items center
        justify-content flex-end

        margin-top 8px
        padding 8px
        border-top 1px solid #aaa
