{
  "private": true,
  "name": "delir",
  "productName": "delir",
  "description": "Video production with JavaScript",
  "version": "0.4.1",
  "author": "Ragg <ragg.devpr@gmail.com>",
  "license": "MIT",
  "main": "browser/main.js",
  "scripts": {
    "dev": "cross-env DELIR_ENV=dev gulp",
    "rebuild": "cross-env electron-rebuild",
    "build": "cross-env DELIR_ENV=production gulp publish",
    "declare": "cross-env tsc -p src/delir-core -d --declarationDir src/delir-core/types",
    "precommit": "lint-staged",
    "test-core": "cross-env mocha --colors --reporter spec --watch-extensions ts --require ./src/delir-core/src/__spec__/__bootstrap__.js './src/delir-core/**/__spec__/*-spec.{js,ts}'",
    "test-front": "cross-env mocha --colors --reporter spec --watch-extensions ts,tsx --require ./src/frontend/__spec__/__bootstrap__.js './src/frontend/**/__spec__/*-spec.{ts,tsx}'"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/expect.js": "0.3.29",
    "@types/mocha": "2.2.41",
    "babel-core": "6.26.3",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-decorators-legacy": "1.3.5",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "clean-webpack-plugin": "0.1.19",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "css-modules-require-hook": "4.2.3",
    "electron": "2.0.5",
    "electron-builder": "20.26.0",
    "electron-devtools-installer": "2.2.4",
    "electron-icon-maker": "0.0.4",
    "electron-rebuild": "1.8.1",
    "expect.js": "0.3.1",
    "fork-ts-checker-webpack-plugin": "0.4.3",
    "fs-promise": "2.0.3",
    "gulp": "4.0.0",
    "gulp-babel": "7.0.1",
    "gulp-changed": "3.2.0",
    "gulp-load-plugins": "1.5.0",
    "gulp-plumber": "1.2.0",
    "gulp-pug": "4.0.1",
    "gulp-stylus": "2.7.0",
    "husky": "0.14.3",
    "jsdom": "11.12.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "7.2.0",
    "mocha": "5.2.0",
    "nib": "1.1.2",
    "node-notifier": "5.2.1",
    "raw-loader": "0.5.1",
    "react-test-renderer": "16.4.1",
    "rimraf-promise": "2.0.0",
    "style-loader": "0.21.0",
    "stylus": "0.54.5",
    "stylus-loader": "3.0.2",
    "ts-loader": "4.4.2",
    "ts-node": "7.0.0",
    "tslint": "5.11.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.0.1",
    "uglifyjs-webpack-plugin": "1.2.7",
    "webpack": "4.16.3"
  },
  "dependencies": {
    "font-manager": "0.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.js": [
      "tslint --fix",
      "git add"
    ]
  }
}
