{
  "private": true,
  "name": "delir",
  "productName": "delir",
  "description": "Video production with JavaScript",
  "version": "0.5.2",
  "author": "Ragg <ragg.devpr@gmail.com>",
  "license": "MIT",
  "main": "browser/main.js",
  "scripts": {
    "dev": "cross-env electron-rebuild && cross-env DELIR_ENV=dev gulp",
    "rebuild": "cross-env electron-rebuild",
    "build": "cross-env DELIR_ENV=production gulp publish",
    "declare": "cross-env tsc -p src/delir-core -d --declarationDir src/delir-core/types",
    "clean-modules": "rm -rf node_modules packages/{delir,delir-core,deream}/node_modules/",
    "precommit": "lint-staged",
    "test-core": "jest -c packages/delir-core/jest.config.js",
    "test-front": "jest -c packages/delir/jest.config.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.0.1",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/plugin-transform-modules-commonjs": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/register": "7.0.0",
    "babel-loader": "8.0.2",
    "clean-webpack-plugin": "0.1.19",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "css-modules-require-hook": "4.2.3",
    "download": "7.1.0",
    "electron": "2.0.9",
    "electron-builder": "20.28.4",
    "electron-devtools-installer": "2.2.4",
    "electron-icon-maker": "0.0.4",
    "electron-rebuild": "1.8.2",
    "file-loader": "2.0.0",
    "fork-ts-checker-webpack-plugin": "0.4.9",
    "fs-extra": "7.0.0",
    "gulp": "4.0.0",
    "gulp-babel": "8.0.0",
    "gulp-changed": "3.2.0",
    "gulp-load-plugins": "1.5.0",
    "gulp-plumber": "1.2.0",
    "gulp-pug": "4.0.1",
    "husky": "1.2.0",
    "jsdom": "12.0.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "8.1.0",
    "monaco-editor-webpack-plugin": "1.5.3",
    "nib": "1.1.2",
    "node-notifier": "5.2.1",
    "raw-loader": "0.5.1",
    "react-test-renderer": "16.5.1",
    "style-loader": "0.23.0",
    "stylus": "0.54.5",
    "stylus-loader": "3.0.2",
    "ts-loader": "5.1.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.0.3",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.19.0",
    "zip-dir": "1.0.2"
  },
  "dependencies": {
    "font-manager": "0.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.js": [
      "tslint --fix",
      "git add"
    ]
  }
}
