{
    "compileOnSave": false,
    "compilerOptions": {
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "allowJs": true,
        "jsx": "preserve",
        "target": "ES2016",
        "module": "ES2015",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ES2015",
            "ES2016",
            "ES2017"
        ],
        "baseUrl": ".",
        "paths": {
            "delir-core": ["./src/delir-core/src/index"]
        }
    },
    "files": [
        "./src/declarations.d.ts",
        "./src/delir-core/src/declarations.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "ignoreDiagnostics": [8010, 8011]
    }
}
